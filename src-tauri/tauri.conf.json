{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Marvel-Rivals-Mod-Manager",
  "version": "3.5.0",
  "identifier": "com.marvelrivalsmodmanager.app",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Marvel Rivals Mod Manager",
        "width": 2000,
        "height": 1260,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": false,
        "alwaysOnTop": false,
        "transparent": true,
        "shadow": true,
        "dragDropEnabled": true,
        "windowEffects": {
          "effects": ["hudWindow"],
          "radius": 12.0,
          "state": "active"
        }
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Marvel Rivals Mod Manager",
    "category": "Game",
    "shortDescription": "Professional mod manager for Marvel Rivals",
    "longDescription": "A professional, feature-rich desktop application for managing mods in Marvel Rivals. Supports automatic organization, character-based filtering, real-time file monitoring, and seamless mod installation.",
    "copyright": "Copyright Â© 2025 Marvel Rivals Mod Manager. All rights reserved.",
    "fileAssociations": [
      {
        "ext": ["pak"],
        "name": "Marvel Rivals Mod File",
        "description": "Marvel Rivals game modification file",
        "role": "Editor",
        "mimeType": "application/x-pak"
      }
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": ""
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": false
      },
      "allowDowngrades": false,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "compression": "lzma"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Jaten-shii/marvel-rivals-mod-manager/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDRDdEQTNCQzBCODNFNTcKUldSWFByakFPOXJYbkVEZG5IdGlNamNQWDlpZ0hpRllYRzVJNjc4eUtMc1BmUmJCaGxORnYvTVYK"
    }
  }
}
